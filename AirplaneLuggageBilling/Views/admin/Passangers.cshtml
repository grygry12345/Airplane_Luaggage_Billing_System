
@{
    ViewBag.Title = "Teller";
    Layout = "~/Views/admin/_Layout.cshtml";
}


<div class="container">
    <h2 class="text-center my-3">Passanger List </h2>

    <table class="table table-hover mx-auto ">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Address</th>
                <th>Age</th>
                <th>Sex</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FName @item.MName @item.LName</td>
                    <td>@item.address</td>
                    @{
                        int age = DateTime.Now.Year - item.bDate.Year;
                        <td>@age</td>
                    }
                    <td>@item.sex</td>
                    <td>
                        @Html.ActionLink("Details", "DetailsPassanger", "admin", new { passangerId = item.passangerId }, null) |
                        @Html.ActionLink("Update", "UpdatePassanger", "admin", new { passangerId = item.passangerId }, null) |
                        @Html.ActionLink("Delete", "DeletePassanger", "admin", new { passangerId = item.passangerId }, new { onclick = "return confirm('Are you sure you wish to delete this record?');" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>@Html.ActionLink("Add Passanger", "AddPassanger", "admin", new { @class = "btn btn-primary btn-lg mx-auto" })</p>
</div>



