@model AirplaneLuggageBilling.Models.Passanger
@{
    ViewBag.Title = "AddPassanger";
    Layout = "~/Views/admin/_Layout.cshtml";
}

<h2>Add Passanger</h2>

<div class="col-lg-12">
    <h2>Add New Student Record</h2>
    @using (Html.BeginForm(FormMethod.Post))
    {
        @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.passangerId)
        <div class="form-group">
            <b class="control-label col-md-2">Name</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.FName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2">Middle Name</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2">Last Name</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.LName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2">Address</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2">Birthdate</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.bDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.bDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2">Sex</b>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.sex, new List<SelectListItem> {
                        new SelectListItem { Text = "M", Value = "M"},
                        new SelectListItem {Text = "F", Value = "F", Selected=true} }
                     , new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.sex, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2">Trusted</b>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.isOkay, new List<SelectListItem> {
                        new SelectListItem { Text = "Yes", Value = "true"},
                        new SelectListItem {Text = "No", Value = "false", Selected=true} }
                     , new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.isOkay, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2">Ticket</b>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.isTicketOkay, new List<SelectListItem> {
                        new SelectListItem { Text = "Valid", Value = "true"},
                        new SelectListItem {Text = "Invalid", Value = "false", Selected=true} }
                     , new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.isTicketOkay, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save it" class="btn btn-success" />
            </div>
        </div>
    </div>
    }
    <div>
        @Html.ActionLink("Back to List", "Passangers", "admin", new { @class = "btn btn-secondary my-auto mx-3 float-none" })
    </div>
</div>
